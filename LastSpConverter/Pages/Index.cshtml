@page
@model LastSpConverter.Pages.IndexModel

<style>
    .spotify-button {
        background-color: #15dd30;
        display: inline-block;
        padding: 25px;
        width: 300px;
        font-weight: bold;
    }
</style>

<div class="title">Spofity playlist</div>

<div class="action-container">
    <button class="action-button spotify-button">Authorize</button>
</div>

@section Scripts {
    <script>
        const spotifyButton = document.querySelector('.spotify-button')

        redirectLink = decodeURIComponent('@Model.AuthLink'.replaceAll("&amp;", "&"))

        spotifyButton.addEventListener('click', () => {
            window.location = encodeURI(redirectLink)
        })
    </script>
}
